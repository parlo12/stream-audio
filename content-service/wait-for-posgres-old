 #!/bin/sh
 set -e

host="${DB_HOST}"
port="${DB_PORT:-5432}"
user="${DB_USER}"
password="${DB_PASSWORD}"
dbname="${DB_NAME}"

 export PGPASSWORD="$password"

echo "ðŸ”„ Waiting for Postgres at $host:$port (user: $user)..."

attempt=0
while ! psql "host=$host port=$port user=$user dbname=$dbname sslmode=require sslrootcert=/certs/do-postgres-ca.crt" -c '\q' 2>/dev/null; do
  attempt=$((attempt+1))
  echo "Attempt $attempt: Postgres is unavailable â€“ sleeping"
  sleep 2
done

echo "âœ… Postgres is ready. Starting service..."

 # Debug: confirm what will be executed

 echo "ðŸš€ Launching app: $@"
 echo "----------------------------------------"
 
 unset PGPASSWORD
 exec "$@"